<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>{{title}}</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav>
    <a href="/">Home</a>
    <a href="/courses">Courses</a>
    {{#user}}
      {{#isOrganiser}}<a href="/organiser/dashboard">Organiser Panel</a>{{/isOrganiser}}
      <span>Welcome, {{user.username}}</span>
      <a href="/logout">Logout</a>
    {{/user}}
    {{^user}}
      <a href="/login">Login</a>
      <a href="/register">Register</a>
    {{/user}}
  </nav>

  <main>
<!-- views/course-detail.mustache -->
<!DOCTYPE html>
<html>
<head>
  <title>{{course.name}}</title>
</head>
<body>
  <h1>{{course.name}}</h1>
  <p><strong>Duration:</strong> {{course.duration}}</p>
  <p><strong>Description:</strong> {{course.description}}</p>
  <p><strong>Location:</strong> {{course.location}}</p>
  <p><strong>Price:</strong> {{course.price}}</p>

  <h3>Schedule:</h3>
  <ul>
    {{#course.schedule}}
      <li>{{date}} at {{time}}</li>
    {{/course.schedule}}
  </ul>

  {{#user}}
  {{#isEnrolled}}
    <p><strong>You are already enrolled in this course.</strong></p>
  {{/isEnrolled}}
  {{^isEnrolled}}
    <form action="/courses/{{course._id}}/enroll" method="POST">
      <button type="submit">Enroll in this course</button>
    </form>
  {{/isEnrolled}}
{{/user}}

{{^user}}
  <p><a href="/login">Login to enroll</a></p>
{{/user}}


  <p><a href="/courses">‚Üê Back to courses</a></p>
</body>
</html>

  </main>
</body>
</html>